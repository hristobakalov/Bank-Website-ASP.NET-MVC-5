@using BankWebsite.Models;
@{
    var year = DateTime.Now.Year;

    var currUser = System.Web.HttpContext.Current.Session["userCredentionals"] as User;

}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>

    <!-- Bootstrap -->
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/css/bootstrap.min.css")
    @Styles.Render("~/css/font-awesome.min.css")
    @Styles.Render("~/css/animate.min.css")
    @Styles.Render("~/css/prettyPhoto.css")
    @Styles.Render("~/css/style.css")
    @Styles.Render("~/css/responsive.css")

</head>
<body class="homepage">
    <header id="header">
        <nav class="navbar navbar-fixed-top" role="banner">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <img src="~/images/money.png" class="logo" />
                    <a class="navbar-brand" href="index.html">KeepX Bank</a>
                </div>

                <div class="collapse navbar-collapse navbar-right">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, null)</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, null)</li>
                        @if (currUser != null)
                        {
                            <li class="dropdown">
                                <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                                    @currUser.Firstname @currUser.Lastname

                                    <span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                                    <li>@Html.ActionLink("Sign Out", "SignOut", "Home", new { area = "" }, null)</li>
                                </ul>
                            </li>
                            @*<li><div class="userNames">@ViewBag.FirstName @ViewBag.LastName</div></li>*@
                        }
                        else
                        {
                            <li class="dropdown">
                                <a class="dropdown-toggle" href="#" data-toggle="dropdown">Sign In <strong class="caret"></strong></a>
                                <div class="dropdown-menu" style="padding: 15px; padding-bottom: 0px;">
                                    @using (Html.BeginForm("Login", "Home"))
                                    {
                                        <input id="email" style="margin-bottom: 15px;" type="text" name="email" size="30" />
                                        <input id="password" style="margin-bottom: 15px;" type="password" name="password" size="30" />
                                        <input class="btn btn-primary" style="clear: left; width: 100%; height: 32px; font-size: 13px;" type="submit" name="commit" value="Sign In" />

                                    }
                                    <a href="~/Home/SignUp2">Sign Up</a>
                                </div>
                            </li>
                        }

